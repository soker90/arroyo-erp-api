{
  "name": "arroyo-erp-api",
  "version": "1.7.1",
  "description": "API for Arroyo Erp",
  "main": "index.js",
  "scripts": {
    "start": "NODE_ENV=production NTBA_FIX_319=1000 node ./bin/www",
    "dev": "NODE_ENV=dev NTBA_FIX_319=1000 nodemon ./bin/www",
    "test": "NODE_ENV=test NTBA_FIX_319=1000 jest --detectOpenHandles --coverage",
    "lint": "eslint '**/*.js'"
  },
  "pre-push": [
    "test",
    "eslint"
  ],
  "keywords": [
    "api",
    "nodeJS"
  ],
  "license": "MIT",
  "dependencies": {
    "@hapi/boom": "^10.0.0",
    "arroyo-erp-models": "^1.3.0",
    "bcrypt": "^5.0.1",
    "bluebird": "^3.7.2",
    "body-parser": "^1.20.0",
    "carbone": "^3.2.3",
    "cors": "^2.8.5",
    "express": "^4.18.1",
    "helmet": "^5.1.0",
    "jsonwebtoken": "^8.5.1",
    "lodash.unionwith": "^4.6.0",
    "node-telegram-bot-api": "^0.58.0",
    "nodemon": "^2.0.16"
  },
  "engines": {
    "node": "16.x"
  },
  "devDependencies": {
    "eslint": "^8.18.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.5.3",
    "jest": "^28.1.2",
    "jest-circus": "^28.1.1",
    "jest-sonar-reporter": "^2.0.0",
    "mongodb-memory-server": "^8.7.2",
    "nock": "^13.2.8",
    "supertest": "^6.2.4"
  },
  "jest": {
    "bail": true,
    "testEnvironment": "<rootDir>/test/mongo-test-environment",
    "setupFilesAfterEnv": [
      "<rootDir>/test/bootstrap-jest.js"
    ],
    "coverageReporters": [
      "json",
      "text-summary",
      "lcov",
      "clover"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [],
    "coveragePathIgnorePatterns": [],
    "testRunner": "jest-circus/runner"
  },
  "fakeTimers": {
    "enableGlobally": true
  },
  "config": {
    "mongodbMemoryServer": {
      "version": "4.4.10"
    }
  }
}
