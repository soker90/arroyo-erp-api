{
  "name": "arroyo-erp-api",
  "version": "1.0.0",
  "description": "API for Arroyo Erp",
  "main": "index.js",
  "scripts": {
    "start": "NODE_ENV=production node ./bin/www",
    "start:dev": "NODE_ENV=dev nodemon ./bin/www",
    "test": "NODE_ENV=test jest --detectOpenHandles --coverage",
    "lint": "eslint '**/*.js'"
  },
  "pre-push": [
    "test",
    "eslint"
  ],
  "keywords": [
    "api",
    "nodeJS"
  ],
  "license": "MIT",
  "dependencies": {
    "@hapi/boom": "^9.1.0",
    "arroyo-erp-models": "^0.8.3",
    "bcrypt": "^5.0.0",
    "bluebird": "^3.7.2",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "helmet": "^4.1.0",
    "jsonwebtoken": "^8.5.1",
    "lodash.unionwith": "^4.6.0",
    "nodemon": "^2.0.4",
    "npm": "^6.14.8",
    "swagger-ui-express": "^4.1.4"
  },
  "engines": {
    "node": "14.x"
  },
  "devDependencies": {
    "eslint": "^7.7.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^23.20.0",
    "jest": "^26.4.0",
    "jest-circus": "^26.4.0",
    "jest-sonar-reporter": "^2.0.0",
    "mongodb-memory-server": "^6.6.4",
    "nock": "^13.0.4",
    "supertest": "^4.0.2"
  },
  "jest": {
    "bail": true,
    "testEnvironment": "<rootDir>/test/mongo-test-environment",
    "setupFilesAfterEnv": [
      "<rootDir>/test/bootstrap-jest.js"
    ],
    "coverageReporters": [
      "json",
      "text-summary",
      "lcov",
      "clover"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [],
    "coveragePathIgnorePatterns": [],
    "testRunner": "jest-circus/runner"
  }
}
